# MiniMax TTS API 設定
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_group_id_here

# MiniMax API 設定 (可選)
MINIMAX_BASE_URL=https://api.minimax.chat/v1/text_to_speech
MINIMAX_MODEL=speech-01

# ATEN AIVoice TTS API 設定
ATEN_API_TOKEN=your_aten_api_token_here
ATEN_BASE_URL=https://www.aivoice.com.tw/business/enterprise
# 如果是綠界付款客戶，改用: https://www.aivoice.com.tw/atzone

# 向後兼容 (舊名稱)
EUGENES_API_TOKEN=your_aten_api_token_here
EUGENES_BASE_URL=https://www.aivoice.com.tw/business/enterprise

# 其他 TTS 服務的 API Key (如果有)
OPENAI_API_KEY=your_openai_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# 開發模式設定
DEBUG=true
LOG_LEVEL=INFO
